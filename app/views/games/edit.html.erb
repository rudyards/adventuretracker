<% provide(:title, 'Update RPG') %>
<h1>Update RPG</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
     <%= bootstrap_form_for(@game) do |f| %>
        <%= render 'error_messages' %>
         <%= f.text_field :name, class: 'form-control' %>
         <br>
         <%= f.text_field :description, class: 'form-control' %>
         <br>
         <%= f.time_zone_select :timezone %>
         
          <br>
         <%= f.submit "Update Game", class: "btn btn-primary" %>
         
     <% end %>
     <%= bootstrap_form_for(@game, url:confirm_game_path(@game), method: :get) do |f| %>
        <br>
        <%= f.submit "Delete Game", class: "btn btn-primary" %>
     <% end %>
  </div>
</div>